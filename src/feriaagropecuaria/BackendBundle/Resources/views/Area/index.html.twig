{% extends "::adminlayaout.html.twig" %}

{% block titulo -%}Area list{% endblock %}

{% block body -%}


<div class="table-responsive">
    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Idarea</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('area_show', { 'id': entity.idArea }) }}">{{ entity.idArea }}</a></td>
                <td>{{ entity.Nombre }}</td>
                <td>{{ entity.Precio }}</td>
                <td>

                        <a href="{{ path('area_show', { 'id': entity.idArea }) }}"><button type="button" class="btn btn-default">show</button></a>

                        <a href="{{ path('area_edit', { 'id': entity.idArea }) }}"><button type="button" class="btn btn-default">edit</button></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

            <a href="{{ path('area_new') }}">
                <button type="button" class="btn btn-primary">Create a new entry</button>
            </a>

    {% endblock %}
